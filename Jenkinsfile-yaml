//Update kubernetes-plugin to 1.7
node('master'){
   checkout scm
   yamlFromFile=readFile 'pod.yaml' //Read yaml file
}

podTemplate(
  name: 'app-users-it',
  label: 'app-users-it',
  cloud: 'openshift',
  yaml: yamlFromFile //Use the yaml read from file
  )
{
